<UserControl x:Class="GRFEditor.OpenGL.WPF.AdvancedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" >
    <Border Name="_outerBorder" Background="{DynamicResource UIThemeTextBoxBackgroundBrush}" BorderThickness="0" BorderBrush="{DynamicResource UIThemeMouseOverBorderBrush}">
        <Grid Margin="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8" />
                <ColumnDefinition />
                <ColumnDefinition Width="8" />
            </Grid.ColumnDefinitions>
            <Grid Name="_gridPrevious" Grid.Column="0" Background="Transparent">
                <Path Name="_pathPrevious" Stroke="Black" StrokeThickness="1" Data="M 3,6 0,3 3,0" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="false" Visibility="Hidden" />
            </Grid>
            <Grid Name="_gridPreview" Grid.Column="1" Background="Transparent">
                <TextBlock Name="_previewLeft" Margin="1" Text="Left" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Name="_previewMid" Margin="1" Text="Center" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Name="_previewRight" Margin="1" Text="Right" HorizontalAlignment="Right" VerticalAlignment="Center" />
            </Grid>
            <Grid Name="_gridNext" Grid.Column="2" Background="Transparent">
                <Path Name="_pathNext" Stroke="Black" StrokeThickness="1" Data="M 0,6 3,3 0,0" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="false" Visibility="Hidden" />
            </Grid>
            <TextBox Name="_tb" BorderThickness="0" Grid.ColumnSpan="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Padding="5 0 0 0" Opacity="0" IsHitTestVisible="False" />
        </Grid>
    </Border>
</UserControl>
