<styles:TkWindow x:Class="GRFEditor.OpenGL.WPF.CameraEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:GRFEditor.WPF"
        xmlns:wpf1="clr-namespace:GRFEditor.OpenGL.WPF"
        xmlns:styles="clr-namespace:TokeiLibrary.WPF.Styles;assembly=TokeiLibrary"
        Title="Camera edit..." SizeToContent="WidthAndHeight"
        ResizeMode="NoResize" 
        Background="{DynamicResource TabItemBackground}" Foreground="{DynamicResource TextForeground}"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" Text="Mode" />
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="3" Text="Distance" />
        <TextBlock Grid.Row="3" Grid.Column="0" Margin="3" Text="LookAt X" />
        <TextBlock Grid.Row="4" Grid.Column="0" Margin="3" Text="LookAt Y" />
        <TextBlock Grid.Row="5" Grid.Column="0" Margin="3" Text="LookAt Z" />
        <TextBlock Grid.Row="6" Grid.Column="0" Margin="3" Text="Angle X" />
        <TextBlock Grid.Row="7" Grid.Column="0" Margin="3" Text="Angle Y" />
        <TextBlock Grid.Row="8" Grid.Column="0" Margin="3" Text="Position X" />
        <TextBlock Grid.Row="9" Grid.Column="0" Margin="3" Text="Position Y" />
        <TextBlock Grid.Row="10" Grid.Column="0" Margin="3" Text="Position Z" />
        <TextBlock Grid.Row="11" Grid.Column="0" Margin="3" Text="ZNear" />
        <TextBlock Grid.Row="12" Grid.Column="0" Margin="3" Text="ZFar" />
        <TextBlock Grid.Row="13" Grid.Column="0" Margin="3" Text="Copy" />
        <TextBlock Grid.Row="14" Grid.Column="0" Margin="3" Text="Paste" />

        <ComboBox Name="_cbCameraMode" Grid.Row="0" Grid.Column="1" Margin="3" />
        <wpf1:FloatTextBoxEdit Grid.Row="2" Grid.Column="1" Margin="3" x:Name="_tbDistance" />
        <wpf1:FloatTextBoxEdit Grid.Row="3" Grid.Column="1" Margin="3" x:Name="_tbLookAtX" />
        <wpf1:FloatTextBoxEdit Grid.Row="4" Grid.Column="1" Margin="3" x:Name="_tbLookAtY" />
        <wpf1:FloatTextBoxEdit Grid.Row="5" Grid.Column="1" Margin="3" x:Name="_tbLookAtZ" />
        
        <wpf1:FloatTextBoxEdit Grid.Row="6" Grid.Column="1" Margin="3" x:Name="_tbAngleX" />
        <wpf1:FloatTextBoxEdit Grid.Row="7" Grid.Column="1" Margin="3" x:Name="_tbAngleY" />
        
        <wpf1:FloatTextBoxEdit Grid.Row="8" Grid.Column="1" Margin="3" x:Name="_tbPositionX" />
        <wpf1:FloatTextBoxEdit Grid.Row="9" Grid.Column="1" Margin="3" x:Name="_tbPositionY" />
        <wpf1:FloatTextBoxEdit Grid.Row="10" Grid.Column="1" Margin="3" x:Name="_tbPositionZ" />
        
        <wpf1:FloatTextBoxEdit Grid.Row="11" Grid.Column="1" Margin="3" x:Name="_tbZNear" />
        <wpf1:FloatTextBoxEdit Grid.Row="12" Grid.Column="1" Margin="3" x:Name="_tbZFar" />
        
        <Button Grid.Row="13" Grid.Column="1" Margin="3" Content="Copy" Name="_buttonCopy" Click="_buttonCopy_Click" />
        <Button Grid.Row="14" Grid.Column="1" Margin="3" Content="Patse" Name="_buttonPaste" Click="_buttonPaste_Click" />
    </Grid>
</styles:TkWindow>
