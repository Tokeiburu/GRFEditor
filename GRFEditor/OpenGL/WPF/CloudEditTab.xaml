<TabItem x:Class="GRFEditor.OpenGL.WPF.CloudEditTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpf="clr-namespace:GRFEditor.WPF" xmlns:wpf1="clr-namespace:GRFEditor.OpenGL.WPF"
			 mc:Ignorable="d"
             Background="{DynamicResource TabItemBackground}" Foreground="{DynamicResource TextForeground}"
             >
    <Grid x:Name="_grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MinWidth="120" />
        </Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="1" Grid.Column="0" Margin="3" Text="Cloud type" Name="_labelCloudType" Visibility="Collapsed" Tag="old" />
		<TextBlock Grid.Row="0" Grid.Column="0" Margin="3" Text="Enabled" Tag="old" />
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="3" Text="Amount" />
        <TextBlock Grid.Row="3" Grid.Column="0" Margin="3" Text="Color" />
        <TextBlock Grid.Row="4" Grid.Column="0" Margin="3" Text="Size_Min" />
        <TextBlock Grid.Row="5" Grid.Column="0" Margin="3" Text="Size_Extra" />
        <TextBlock Grid.Row="6" Grid.Column="0" Margin="3" Text="Expand_Rate" />
        <TextBlock Grid.Row="7" Grid.Column="0" Margin="3" Text="Alpha_Inc_Time" />
        <TextBlock Grid.Row="8" Grid.Column="0" Margin="3" Text="Alpha_Inc_Time_Extra" />
        <TextBlock Grid.Row="9" Grid.Column="0" Margin="3" Text="Alpha_Inc_Speed" />
        <TextBlock Grid.Row="10" Grid.Column="0" Margin="3" Text="Alpha_Dec_Time" />
        <TextBlock Grid.Row="11" Grid.Column="0" Margin="3" Text="Alpha_Dec_Time_Extra" />
        <TextBlock Grid.Row="12" Grid.Column="0" Margin="3" Text="Alpha_Dec_Speed" />
        <TextBlock Grid.Row="13" Grid.Column="0" Margin="3" Text="Height" />
        <TextBlock Grid.Row="14" Grid.Column="0" Margin="3" Text="Height_Extra" />

		<wpf1:IntTextBoxEdit Grid.Row="1" Grid.Column="1" Margin="3" x:Name="_tbCloudType" Visibility="Collapsed" Tag="old" />
        <CheckBox Grid.Row="0" Grid.Column="1" Margin="3" Name="_cbEnabled" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="old" />
        <wpf1:IntTextBoxEdit Grid.Row="2" Grid.Column="1" Margin="3" x:Name="_tbAmount" />
        <wpf:QuickColorSelector Grid.Row="3" Grid.Column="1" Height="20" x:Name="_tbColor" Margin="3" />
        <wpf1:FloatTextBoxEdit Grid.Row="4" Grid.Column="1" Margin="3" x:Name="_tbSize" />
        <wpf1:FloatTextBoxEdit Grid.Row="5" Grid.Column="1" Margin="3" x:Name="_tbSize_Extra" />
        <wpf1:FloatTextBoxEdit Grid.Row="6" Grid.Column="1" Margin="3" x:Name="_tbExpand_Rate" />
        <wpf1:FloatTextBoxEdit Grid.Row="7" Grid.Column="1" Margin="3" x:Name="_tbAlpha_Inc_Time" />
        <wpf1:FloatTextBoxEdit Grid.Row="8" Grid.Column="1" Margin="3" x:Name="_tbAlpha_Inc_Time_Extra" />
        <wpf1:FloatTextBoxEdit Grid.Row="9" Grid.Column="1" Margin="3" x:Name="_tbAlpha_Inc_Speed" />
        <wpf1:FloatTextBoxEdit Grid.Row="10" Grid.Column="1" Margin="3" x:Name="_tbAlpha_Dec_Time" />
        <wpf1:FloatTextBoxEdit Grid.Row="11" Grid.Column="1" Margin="3" x:Name="_tbAlpha_Dec_Time_Extra" />
        <wpf1:FloatTextBoxEdit Grid.Row="12" Grid.Column="1" Margin="3" x:Name="_tbAlpha_Dec_Speed" />
        <wpf1:FloatTextBoxEdit Grid.Row="13" Grid.Column="1" Margin="3" x:Name="_tbHeight" />
        <wpf1:FloatTextBoxEdit Grid.Row="14" Grid.Column="1" Margin="3" x:Name="_tbHeight_Extra" />
    </Grid>
</TabItem>
